{
  "name": "nmg-backend",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "lint:diagnostics": "tsc -p tsconfig.diagnostics.json",
    "knip": "knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "./node_modules/.bin/commit-and-tag-version --no-verify",
    "release:first": "yarn release --first-release",
    "release:major": "yarn release --release-as major",
    "release:minor": "yarn release --release-as minor",
    "release:patch": "yarn release --release-as patch",
    "prepare": "husky",
    "migrate:create": "yarn migrate-mongo create",
    "migrate:up": "yarn migrate-mongo up",
    "migrate:down": "yarn migrate-mongo down"
  },
  "dependencies": {
    "@apollo/server": "4.12.2",
    "@escape.tech/graphql-armor": "3.1.2",
    "@escape.tech/graphql-armor-cost-limit": "2.4.3",
    "@escape.tech/graphql-armor-max-aliases": "2.6.2",
    "@escape.tech/graphql-armor-max-depth": "2.4.1",
    "@escape.tech/graphql-armor-max-directives": "2.3.1",
    "@escape.tech/graphql-armor-max-tokens": "2.5.1",
    "@escape.tech/graphql-armor-types": "0.7.0",
    "@eslint/compat": "1.2.8",
    "@graphql-yoga/nestjs": "3.13.5",
    "@nestjs/common": "11.0.16",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.16",
    "@nestjs/graphql": "13.1.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/platform-express": "11.0.16",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "graphql": "16.10.0",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "5.13.5",
    "helmet": "8.1.0",
    "migrate-mongo": "12.1.3",
    "minio": "8.0.5",
    "mongoose": "8.13.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.24.0",
    "@nestjs/cli": "11.0.6",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.0",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "commit-and-tag-version": "12.5.1",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-unused-imports": "4.1.4",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "knip": "5.50.2",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "ts-jest": "29.3.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
